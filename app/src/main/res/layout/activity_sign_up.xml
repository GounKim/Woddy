<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3E3E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sign_up_const_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="70dp"
                android:text="이메일"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_box"
                android:ems="10"
                android:hint="이메일 입력"
                android:paddingLeft="7dp"
                app:layout_constraintEnd_toStartOf="@id/id_availability_check_button"
                app:layout_constraintStart_toStartOf="@+id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/id_availability_check_button"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_round_shape"
                android:text="중복확인"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/email_edit_text"
                app:layout_constraintTop_toBottomOf="@id/textView5" />

            <TextView
                android:id="@+id/id_avail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="사용 가능한 이메일입니다."
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/email_edit_text"
                tools:layout_editor_absoluteX="323dp"
                tools:layout_editor_absoluteY="138dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="비밀번호"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/email_edit_text"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="171dp" />

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_box"
                android:ems="10"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:paddingLeft="7dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/textView7"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="192dp" />

            <EditText
                android:id="@+id/password_confirm_edit_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_box"
                android:ems="10"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:paddingLeft="7dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/password_edit_text"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/pw_avail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="비밀번호가 일치합니다."
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/password_confirm_edit_text"
                tools:layout_editor_absoluteX="313dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="닉네임"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/password_confirm_edit_text"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="321dp" />

            <EditText
                android:id="@+id/nickname_edit_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_box"
                android:ems="10"
                android:hint="닉네임 입력"
                android:inputType="textPersonName"
                android:paddingLeft="7dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintEnd_toStartOf="@id/nickname_availability_check_button"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/textView9"
                tools:layout_editor_absoluteY="345dp" />

            <Button
                android:id="@+id/nickname_availability_check_button"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_round_shape"
                android:text="중복확인"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toEndOf="@id/nickname_edit_text"
                app:layout_constraintTop_toBottomOf="@id/textView9"
                tools:layout_editor_absoluteY="344dp" />

            <TextView
                android:id="@+id/nick_avail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:text="사용 가능한 닉네임입니다."
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/nickname_edit_text"
                tools:layout_editor_absoluteX="320dp"
                tools:layout_editor_absoluteY="394dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:text="주소"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/nickname_edit_text"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="431dp" />

            <TextView
                android:id="@+id/textview12"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_view_rect_shape"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:text="우편번호"
                android:textColor="#D1D1D1"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@id/postnum_search_button"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/textView11"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="451dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/text_view_rect_shape"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:text="기본 주소"
                android:textColor="#D1D1D1"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/textview12"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="501dp" />

            <Button
                android:id="@+id/postnum_search_button"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_round_shape"
                android:text="우편번호 검색"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toEndOf="@id/textview12"
                app:layout_constraintTop_toBottomOf="@id/textView11"
                tools:layout_editor_absoluteX="272dp"
                tools:layout_editor_absoluteY="440dp" />

            <EditText
                android:id="@+id/address_edit_text"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/edit_text_box"
                android:ems="10"
                android:hint="상세 주소"
                android:paddingLeft="7dp"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/textView13" />

            <Button
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_round_shape_grayish"
                android:text="다음"
                app:layout_constraintEnd_toEndOf="@id/sign_up_const_layout"
                app:layout_constraintStart_toStartOf="@id/sign_up_const_layout"
                app:layout_constraintTop_toBottomOf="@id/address_edit_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>