<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_postingI_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_weight="12">

        <TextView
            android:id="@+id/home_postingI_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:maxWidth="230dp"
            android:minHeight="20dp"
            android:text="제목"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_postingI_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:maxWidth="250dp"
            android:maxHeight="28dp"
            android:text="mmmmmmmmmmmmmbbbbbbbbbbbmmmmmmmmmmnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/home_postingI_image"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            tools:srcCompat="@drawable/sample_image" />

        <TextView
            android:id="@+id/home_postingI_board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginTop="5dp"
            android:maxWidth="300dp"
            android:maxHeight="14dp"
            android:text="게시판 이름"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_postingI_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:maxWidth="60dp"
            android:text="17:05"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_postingI_imageThumb"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:padding="2.5dp"
                app:srcCompat="@drawable/ic_baseline_liked_yes" />

            <TextView
                android:id="@+id/home_postingI_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="60dp"
                android:text="40000"
                android:layout_marginTop="2dp"
                android:textColor="#FF6B6B"
                android:textSize="10sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>