<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_postingS_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/home_postingS_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:maxWidth="230dp"
            android:minHeight="20dp"
            android:text="제목"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_postingS_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="3dp"
            android:maxWidth="300dp"
            android:maxHeight="28dp"
            android:text="mmmmmmmmmmmmmbbbbbbbbbbbmmmmmmmmmmnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/home_postingS_board_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:maxWidth="300dp"
            android:maxHeight="14dp"
            android:text="게시판 이름"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/home_postingS_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:maxWidth="60dp"
            android:text="17:05"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_postingS_imageThumb"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:padding="2.5dp"
                app:srcCompat="@drawable/ic_baseline_liked_yes" />

            <TextView
                android:id="@+id/home_postingS_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="60dp"
                android:text="40000"
                android:layout_marginTop="3dp"
                android:textColor="#FF6B6B"
                android:textSize="10dp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>