<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/post_board_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_round_shape_grayish_small_radius"
        android:minHeight="120dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_board_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:maxHeight="30dp"
                android:text="제목"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_board_item_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:maxWidth="100dp"
                android:maxHeight="30dp"
                android:text="닉네임"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/post_board_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:maxWidth="430dp"
            android:maxHeight="60dp"
            android:text="내용작성"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_board_item_boardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:maxWidth="300dp"
                android:maxHeight="20dp"
                android:text="게시판 이름"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:maxWidth="300dp"
                android:maxHeight="20dp"
                android:text="-"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/post_board_item_tagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#태그이름"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/post_board_item_writtenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="10dp"
            android:maxWidth="60dp"
            android:text="00:00"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_board_item_like_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="2.5dp"
                app:srcCompat="@drawable/ic_baseline_liked_yes" />

            <TextView
                android:id="@+id/post_board_item_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxWidth="60dp"
                android:text="40000"
                android:textColor="#FF6B6B"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>