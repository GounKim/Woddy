<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!--text view for our course name-->
        <TextView
            android:id="@+id/search_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <!--text view for our course description-->
        <TextView
            android:id="@+id/search_item_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_item_title"
            android:padding="5dp"
            android:text="내용"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/search_item_boardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_item_message"
            android:layout_marginRight="5dp"
            android:maxWidth="300dp"
            android:maxHeight="20dp"
            android:text="게시판 이름"
            android:textSize="10sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>