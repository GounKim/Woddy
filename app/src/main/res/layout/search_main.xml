<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Search.SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/beforebtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <EditText
            android:id="@+id/searchWord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_text_box"
            android:hint="검색어를 입력해주세요."
            android:inputType="text"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:paddingHorizontal="12dp"
            app:checkedChip="@id/chipFriend"
            app:chipSpacingHorizontal="10dp"
            app:chipSpacingVertical="6dp"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true"
            tools:visibility="visible">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFriend"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/frind"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHelp"
                style="@style/Widget.Woody.Chip"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:text="@string/help"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMate"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/mate"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClub"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/club"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMeeting"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/meeting"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipShare"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/share"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHome"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/home"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBuy"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/tgbuy"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFreeShare"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/free_share"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFreeTalk"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/free_talk"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDIY"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/diy"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInterior"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/interior"
                android:textSize="20sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTownInfo"
                style="@style/Widget.Woody.Chip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/town_info"
                android:textSize="20sp" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="검색 결과"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp" />

</LinearLayout>