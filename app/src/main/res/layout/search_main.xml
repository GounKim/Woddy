<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="검색어를 입력해주세요."
            android:inputType="text" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색" />

    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="6dp"
            app:singleLine="true"
            app:singleSelection="true"
            app:checkedChip="@id/chipFriend"
            android:paddingHorizontal="12dp"
            app:selectionRequired="true"
            tools:visibility="visible">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frind"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mate"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/club"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meeting"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tgbuy"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFreeShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_share"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFreeTalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_talk"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDIY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diy"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipInterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interior"
                style="@style/Widget.Woody.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTownInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/town_info"
                style="@style/Widget.Woody.Chip"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="최근 검색"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
